<section class="bg0" style = "background-image: url(../../public/bookTitleImage/wood-card.jpg);">
  <div class="container" style= "background-color:#ffe4b3;">
    <div class="row justify-content-center">
      <div class="col-md-12">
        <div class="p-b-20">
          <div class="tab01 p-b-20">
            <a href="/user/processCart" class="btn btn-success">
              <i class="fa fa-refresh"> Mượn sách</i>
            </a>
            <div class="row">
              {{#each this.lcCart.items}}
              <div class="col-sm-3">
                <div class="card h-100" style="background-color: #804000;background-image: url('../../public/bookTitleImage/wood-card.jpg');">
                  <div class="card-body">
                    <a href="/bookDetail/{{id}}"  class ="hov1 trans-8">
                      <img class="card-img-top" src="../../public/bookTitleImage/{{image}}" alt="Card image cap"
                        style="width: 100%; height:250px">
                    </a>
                  </div>
                  <div class="card-footer" style="background-color: #994d00;background-image: url('../../public/bookTitleImage/wood-footer.jpg');">
                    <h4 class="card-title">{{name}}</h4>
                    <p class="card-text"><b>Tác giả: </b> {{author}}</p>
                    <a href="/user/shoppingCart/delCart/{{id}}" class="btn btn-danger">
                      <i class="fa fa-trash"> Xóa</i>
                    </a>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
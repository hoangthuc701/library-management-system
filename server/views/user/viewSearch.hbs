<section class="bg0">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="p-b-20">
                    <div class="tab01 p-b-20">
                        <div class="row">
                            {{#each this.List}}
                            <div class="col-sm-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <a href="/bookDetail/{{id}}">
                                            <img class="card-img-top" src="../../public/bookTitleImage/{{image}}"
                                                alt="Card image cap">
                                        </a>
                                    </div>
                                    <div class="card-footer">
                                        <h4 class="card-title">{{name}}</h4>
                                        <p class="card-text"><b>Số lượng: </b>{{quantity}}</p>
                                        <p class="card-text"><b>Tác giả: </b> {{author}}</p>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
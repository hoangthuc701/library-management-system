<section style = "background-image: url(../../public/bookTitleImage/wood-card.jpg);">
    <div class="container" style= "background-color:#ffe4b3;">
        <div class="row justify-content-center">
            <div class="col-md-12 mt-5">
                <div class="p-b-20">
                    <div class="tab01 p-b-20">
                        <div class="row">
                            {{#each this.List}}
                            <div class="col-sm-3 m-t-25">
                                <div class="card h-100" style="background-color: #804000;background-image: url('../../public/bookTitleImage/wood-card.jpg');">
                                    <div class="card-body">
                                        <a href="/bookDetail/{{id}}" class ="hov1 trans-10">
                                            <img class="card-img-top" src="../../public/bookTitleImage/{{image}}"
                                                alt="Card image cap" style="width: 100%; height:300px">
                                        </a>
                                    </div>
                                    <div class="card-footer " style="background-color: #994d00;background-image: url('../../public/bookTitleImage/wood-footer.jpg');">
                                        <h4 class="card-title" style="color: #ffe6cc;">{{name}}</h4>
                                        <p class="card-text" style="color: #ffe6cc;"><b>Số lượng: </b>{{quantity}}</p>
                                        <p class="card-text" style="color: #ffe6cc;"><b>Tác giả: </b> {{author}}</p>
                                        <p class="card-text" style="color: #ffe6cc;"><b>Lượt xem: </b> {{view}}</p>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
        <div class="row" style="background-image:url('../../public/bookTitleImage/wood-button.jpg');">
            <div class="col-12">
                <div class="card mt-3 mb-3" style="background-color:#ffe4b3;">
                    <div class="row" style="margin-top: 20px;" >
                        <div class="col-sm-1"></div>
                        <div class="col-sm-9">
                            <form method="POST" action="" enctype="multipart/form-data" style="width: 100%"
                                id="form-confirm">
                                <div class="form-group">
                                    <label for="Cname">tên sách</label>
                                    <input autocomplete="off" type="text" class="form-control" id="name" name="name" placeholder="Tên sách" maxlength="30"
                                        value="" style="background-color: #993300; color: white;" required>
                                </div>
                                <div class="form-group">
                                    <label for="Cauthor">Tác giả</label>
                                    <input autocomplete="off" type="text" class="form-control" id="author" name="author" maxlength="30"
                                        placeholder="Tác giả" value="" style="background-color: #993300; color: white;" required>
                                </div>
                                <div class="form-group">
                                    <label for="Cquantity">Số lượng</label>
                                    <input autocomplete="off" type="number" min="1" max="100" class="form-control" id="quantity" name="quantity" 
                                        placeholder="" value="" style="background-color: #993300; color: white;" required>
                                </div>
                                <div class="form-group">
                                    <label for="Cdescription">Mô tả</label>
                                    <input autocomplete="off" type="text" class="form-control" id="description" name="description" maxlength="50"
                                        placeholder="Mô tả" value="" style="background-color: #993300; color: white;" required>
                                </div>
                                <div class="form-group">
                                    <label for="Ccategory">Chuyên mục</label>
                                    <select id="cbCategory" name="categoryID" class="form-control"
                                        onchange="cbRoleChange({{id}})" style="background-color: #993300; color: white;">
                                        {{#each this.List}}
                                        <option value="{{id}}" {{#when id 'eq' 1}}selected{{/when}}>{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="txtImage">Ảnh sách:</label><br>
                                    <img id="showImg" src="../../public/bookTitleImage/noImage.jpg"
                                        style="width:300px;height:300px;"><br>
                                    <input type="file" name="urlImage" value="" id="urlImage" required></input>
                                </div>

                                <a class="btn btn-success" href="/stockkeeper/BookTitle?p=1" role="button"
                                    title="Back to List"
                                    style="background-image:url('../../public/bookTitleImage/wood-footer.jpg'); color:whitesmoke">
                                    <i class="fa fa-hand-o-left" aria-hidden="true"></i>
                                </a>
                                <input type="submit" value="thêm" class="btn btn-primary" id="btn-confirm"
                                style="background-image:url('../../public/bookTitleImage/wood-footer.jpg'); color:whitesmoke">
                            </form>
                        </div>
                        <div class="col-sm-2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
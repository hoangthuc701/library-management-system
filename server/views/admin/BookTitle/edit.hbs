<div class="card">
    <div class="card-header">
        <h4>sửa sách</h4>
    </div>
    <div class="row" style="margin-top: 20px;">
        <div class="col-sm-1"></div>
        <div class="col-sm-9">
        <form method="POST" action="" enctype="multipart/form-data" style="width: 100%" id="form-confirm">
            <div class="form-group">
                <label for="Cname">tên sách</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Tên sách"
                    value="{{this.ListBook.0.name}}">
            </div>
            <div class="form-group">
                <label for="Cauthor">Tác giả</label>
                <input type="text" class="form-control" id="author" name="author" placeholder="Tác giả"
                    value="{{this.ListBook.0.author}}">
            </div>
            <div class="form-group">
                <label for="Cquantity">Số lượng</label>
                <input type="number" class="form-control" id="quantity" name="quantity" placeholder=""
                    value="{{this.ListBook.0.quantity}}">
            </div>
            <div class="form-group">
                <label for="Cdescription">Mô tả</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="Mô tả"
                    value="{{this.ListBook.0.description}}">
            </div>
            <div class="form-group">
                <label for="Ccategory">Chuyên mục</label>
                <select id="cbCategory" name="categoryID" class="form-control" onchange="cbRoleChange({{id}})">
                    {{#each this.Listcate}}
                    <option value="{{id}}" {{#when id 'eq' 1}}selected{{/when}}>{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="txtImage">Ảnh đại diện bài viết:</label><br>
                <img id="showImg" src="../../..{{this.ListBook.0.image}}" style="width:300px;height:300px;"><br>
                <input type="file" name="urlImage" value="" id="urlImage"></input>
            </div>
            
            <a class="btn btn-success" href="/admin" role="button" title="Back to List">
                <i class="fa fa-backward" aria-hidden="true"></i>
            </a>
            <input type="submit" value="Submit" class="btn btn-primary" id="btn-confirm" >
        </form>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>
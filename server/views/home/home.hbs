{{#section 'title'}}
Trang chủ
{{/section}}
<!-- Hiển thị top 10 quyển sách được xem nhiều nhất -->

<section style="background-image:url('../../public/bookTitleImage/imagebackround.jpg');">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-12">
        <div class="p-b-20">
          <div class="tab01 p-b-20">
            <div class="">
              <h3 class="f1-m-2 cl12 tab01-title" style="color:whitesmoke">
                <i class="fa fa-exclamation-triangle m-t-25" aria-hidden="true"></i> Các quyển sách sắp hết hàng
              </h3>
            </div>
            <div class="row">
              {{#each this.list6GonnaOutOfStock}}
              <div class="col-sm-4 m-t-25" style="margin-bottom: 25px;">
                <div class="card h-100"
                  style="background-color: #804000;background-image: url('../../public/bookTitleImage/wood-card.jpg');">
                  <div class="card-body">
                    <a href="/bookDetail/{{id}}" class="hov1 trans-03 _book">
                      <img class="card-img-top" src="../../public/bookTitleImage/{{image}}" alt="Card image cap" style="width: 100%; height:400px">
                    </a>
                  </div>
                  <div class="card-footer"
                    style="background-color: #994d00;background-image: url('../../public/bookTitleImage/wood-footer.jpg');">
                    <h4 class="card-title" style="color: #ffe6cc;">{{name}}</h4>
                    <p class="card-text" style="color: #ffe6cc;"><b>Số lượng: </b>{{quantity}}</p>
                    <p class="card-text" style="color: #ffe6cc;"><b>Tác giả: </b> {{author}}</p>
                    <p class="card-text" style="color: #ffe6cc;"><b> <i class="fa fa-eye text-white"
                          aria-hidden="true"></i></b> {{view}}</p>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>

            <div class="tab01 p-t-35">
              {{!-- class="tab01-head how2 how2-cl2 bocl12 flex-s-c m-r-10 m-r-0-sr991" --}}
              <div>
                <h3 class="f1-m-2 cl13 tab01-title" style="color:whitesmoke;">
                  <i class="fa fa-rocket" aria-hidden="true"></i> Top các quyển sách được xem nhiều nhất
                </h3>
              </div>
              <div class="row">
                {{#each list6MostView}}
                <div class="col-sm-4 m-t-25" style="margin-bottom: 25px;">
                  <div class="card h-100"
                    style="background-color: #804000;background-image: url('../../public/bookTitleImage/wood-card.jpg');">
                    <div class="card-body">
                      <div class="mt-2 mb-2 hov1 trans-03 _book">
                        <a href="/bookDetail/{{id}}">
                          <img class="card-img-top" src="../../public/bookTitleImage/{{image}}" alt="Card image cap" style="width: 100%; height:400px">
                        </a>
                      </div>
                    </div>
                    <div class="card-footer"
                      style="background-color: #994d00;background-image: url('../../public/bookTitleImage/wood-footer.jpg');">
                      <h4 class="card-title" style="color: #ffe6cc;">{{name}}</h4>
                      <p class="card-text" style="color: #ffe6cc;"><b>Số lượng: </b>{{quantity}}</p>
                      <p class="card-text" style="color: #ffe6cc;"><b>Tác giả: </b> {{author}}</p>
                      <p class="card-text" style="color: #ffe6cc;"><b> <i class="fa fa-eye text-white"
                            aria-hidden="true"></i></b> {{view}}</p>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
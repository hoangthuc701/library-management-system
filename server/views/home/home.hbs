<!-- Hiển thị top 10 quyển sách được xem nhiều nhất -->

<section class="bg0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-12">
        <div class="p-b-20">
          <div class="tab01 p-b-20">
            <div class="tab01-head how2 how2-cl1 bocl12 flex-s-c m-r-10 m-r-0-sr991">
              <h3 class="f1-m-2 cl12 tab01-title">
                <i class="fa fa-thumbs-up" aria-hidden="true"></i> Các quyển sách sắp hết hàng
              </h3>
            </div>
            <div class="row">
              {{#each this.list6GonnaOutOfStock}}
              <div class="col-sm-4">
                <div class="card h-100">
                  <div class="card-body">
                    <a href="/bookDetail/{{id}}">
                      <img class="card-img-top" src="../../public/bookTitleImage/{{image}}" alt="Card image cap">
                    </a>
                  </div>
                  <div class="card-footer">
                    <h4 class="card-title">{{name}}</h4>
                    <p class="card-text"><b>Số lượng: </b>{{quantity}}</p>
                    <p class="card-text"><b>Tác giả: </b> {{author}}</p>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>

            <div class="tab01 p-t-35">
              <div class="tab01-head how2 how2-cl2 bocl12 flex-s-c m-r-10 m-r-0-sr991">
                <h3 class="f1-m-2 cl13 tab01-title">
                  <i class="fa fa-info-circle" aria-hidden="true"></i> Top các quyển sách được xem nhiều nhất
                </h3>
              </div>
              <div class="row">
                {{#each list6MostView}}
                <div class="col-sm-4">
                  <div class="card h-100">
                    <div class="card-body">
                      <a href="/bookDetail/{{id}}">
                        <img class="card-img-top" src="../../public/bookTitleImage/{{image}}" alt="Card image cap">
                      </a>
                    </div>
                    <div class="card-footer">
                      <h4 class="card-title">{{name}}</h4>
                      <p class="card-text"><b>Số lượng: </b>{{quantity}}</p>
                      <p class="card-text"><b>Tác giả: </b> {{author}}</p>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
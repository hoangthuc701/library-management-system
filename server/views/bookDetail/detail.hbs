{{#section 'title'}}
{{this._book.TieuDe}}
{{/section}}

{{#section 'js'}}
<script src="../../public/js/book.js"></script>
{{/section}}



<div class="container">
    <div class="headline bg0 flex-wr-sb-c p-rl-20 p-tb-8 bg1">
        <div class="f2-s-1 p-r-30 m-tb-6">
            <a href="/" class="breadcrumb-item f1-s-3 cl9">
                Trang chủ
            </a>

            <a href="/category/{{this._book.ChuyenMucID}}" class="breadcrumb-item f1-s-3 cl9">
                {{this._relatedBook.0.catname}}
            </a>
            <span class="breadcrumb-item f1-s-3 cl9">
                {{this._book.name}}
            </span>
        </div>
    </div>
</div>
<!-- Content -->
<section class="bg0 p-b-140">
    {{!-- <div class="bg-img1 size-a-18 how-overlay1"
        style="background-image: url(../../public/bookTitleImage/{{this._book.image}});"> --}}

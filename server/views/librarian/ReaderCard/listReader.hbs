{{#section 'js'}}
<script>
  function viewDetail(index) {
    var detailIndex = "row" + index;
    var rowDetail = document.getElementById(detailIndex)
    if (rowDetail.style.display == "")
      document.getElementById(detailIndex).style.display = "none";
    else if (rowDetail.style.display == "none")
      document.getElementById(detailIndex).style.display = "";
  }


</script>
{{/section}}
{{#section 'css'}}
<style>
  .pagination {
    display: inline-block;
  }

  .pagination a {
    color: black;
    float: left;
    padding: 8px 16px;
    text-decoration: none;
    background-color: lavender;
  }

  .pagination a.active {
    background-color: #4CAF50;
    color: white;
    border: 1px solid #4CAF50;
  }
</style>

{{/section}}
<section style="background-color: #804000;background-image: url('../../public/bookTitleImage/wood-card.jpg');">
  <div class="container" style="background-color:#ffe4b3;">
    <div class="row" style="background-image:url('../../public/bookTitleImage/wood-button.jpg');">
      <div class="headline bg0 flex-wr-sb-c p-rl-20 p-tb-8 bg1"
        style="background-image:url('../../public/bookTitleImage/wood-button.jpg');">
        <div class="f2-s-1 p-r-30 m-tb-6">
          <a href="/" class="breadcrumb-item f1-s-3 cl9" style="color:whitesmoke;">
            Trang chủ
          </a>
          <a href="/librarian/readerCard?p=1" class="breadcrumb-item f1-s-3 cl9" style="color:whitesmoke;">
            Quản lý độc giả
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="container" style="background-color:#ffe4b3;">
    <div class="row" style="background-image:url('../../public/bookTitleImage/wood-button.jpg');">
      <div class="col-12" style="background-color:#ffe4b3;">
        <div class="card mt-3 mb-5" style="background-color:#ffe4b3;">
          <div class="card-header" >
            <ul class="pagination" >
              {{#each this.pagi}}
              {{#when value 'noteq'-1}}
              <li><a href="/librarian/readerCard?p={{value}}"
                  style="background-image:url('../../public/bookTitleImage/wood-footer.jpg'); color:whitesmoke">{{value}}</a></li>
              {{/when}}
              {{/each}}
            </ul>
          </div>
          <div class="card" style="background-color:#ffe4b3;">
            <div class="card-header d-flex justify-content-between" style="width: 100%;">
              <form method="POST" action="/librarian/readerCard/add" style="width: 100%" id="form-confirm" class="form-inline">
                <div class="form-group mb-2">
                  <input autocomplete="off" id="txtBorrowingCardID"
                    style="background-color: #993300; color: white; border-width: 5px;height:35px" name="username"
                    placeholder="Nhập tên tài khoản" required/>
                </div>
                <button class="btn btn-outline-success mb-2 ml-2" style="background-color: #804000; color:white" role="button"
                  type="submit" form="form-confirm">
                  <i class="fa fa-plus" aria-hidden="true"></i>
                  Thêm thẻ độc giả
                </button>
              </form>
            </div>
            <table class="table" id="tableCategory">
              <thead>
                <tr style="background-color: #804000;background-image: url('../../public/bookTitleImage/wood-button.jpg');">
                  <th scope="col" class="text-left" style="width: 10%; color:white">#</th>
                  <th scope="col" class="text-left" style="color:white">Tên tài khoản</th>
                  <th scope="col" class="text-left" style="color:white">Ngày đăng ký</th>
                  <th scope="col" class="text-left" style="color:white">thời hạn</th>
                  <th scope="col" class="text-left" style="color:white">Action</th>
                </tr>
              </thead>
              <tbody id="tbodyCateParent" style="background-color:#d9b38c;">
                {{#each List}}
                <tr>
                  <th scope="row" class="text-left" id="tdParentIndex{{id}}">
                    <p style="color:black; font: bold;" >{{id}}</p>
                  </th>
                  <td class="text-left">
                    <p style="color: black;font: bold;">{{username}}</p>
                  </td>
                  <td class="text-left">
                    <p style="color: black;font: bold;">{{created_date}}</p>
                  </td>
                  <td class="text-left">
                    <p style="color: black;font: bold;">{{expirated_date}}</p>
                  </td>

                  <td class="text-left">
                    <a href="/librarian/readerCard/edit?id={{id}}" class="btn btn-primary btn-sm">
                      <i class="fa fa-pencil" aria-hidden="true"> sửa</i>
                    </a>
                    <a href="/librarian/readerCard/del/{{id}}" class="btn btn-danger btn-sm">
                      <i class="fa fa-trash" aria-hidden="true"> Xóa</i>
                    </a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>